@model Placements_Model.Models.Student

@{
    ViewBag.Title = "Delete";
}
<link href="~/Content/Index.css" rel="stylesheet" type="text/css" />


@Styles.Render("~/Content/css")

<h3 style="margin-top:15px">Are you sure you want to delete this?</h3>
<div>
    <center class="student-details">
        <h4 class="text-center">Student</h4>
        <hr />

        <div class="container">


            @{
                Html.RenderPartial("studentdetailsdisplay");
            }
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">

                    <a href="/admindelete/deletestudent">
                        <input type="button" value="Delete" class="btn btn-outline-danger" />
                    </a>

                </div>
            }
        </div>
    </center>
</div>
