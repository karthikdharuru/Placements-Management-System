<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Index.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-danger">
        <div class="container">
            
                <p class="text-light d-none d-sm-block" style="font-size:18px" >Placements Managemet System</p>
                 <p class="text-light d-block d-sm-none brand" style="font-size:18px" >PMS</p>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
       
            <div class="collapse navbar-collapse justify-content-end" id="collapsibleNavbar" >
                
                <ul class="nav navbar-nav nav-ul">
                   
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="text-light username">Welcome-@User.Identity.Name</li>
                            if (Roles.IsUserInRole("Admin"))
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Home", "index", "admin", new { }, new { @style = "text-decoration:none", @class = "text-light home" })
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Home", "studentdetails", "student", new { }, new { @style = "text-decoration:none", @class = "text-light home" })
                                </li>
                            }

                        @*<li class="nav-item">
                            <a href="/home/logout" >
                                <input type="button" class="logout" value="LogOut"/>
                            </a>
                        </li>*@

                        <li>
                            @Html.ActionLink("Logout", "logout", "home", new { }, new { @style = "text-decoration:none", @class = "text-light logout" })
                        </li>



                        }
                   
                 
                </ul>
                

            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        
    </div>
 

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
