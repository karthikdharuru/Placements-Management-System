@model IEnumerable<Placements_Model.Models.Student>

@{
    ViewBag.Title = "AcceptorDenyStudent";
}

<link href="~/Content/Index.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/Placements.js" type="text/javascript"></script>

<h2 class="text-center">Register Student</h2>



<table class="table table-striped table-hover table-responsive">
    <tr class="active">
        <th>
            @Html.DisplayNameFor(model => model.StudentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Branch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cgpa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Percentage)
        </th>

        <th>
            action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Branch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cgpa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Percentage)
            </td>
            <td>

                <a href="@Url.Action("acceptordenystudent", "adminregister", new { Email = item.Email })">
                    <input type="submit" value="View" class="btn btn-outline-danger" />
                </a>
            </td>
        </tr>
    }
    
</table>


