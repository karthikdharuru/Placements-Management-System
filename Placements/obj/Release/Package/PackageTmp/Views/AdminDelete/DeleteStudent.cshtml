@model Placements_Model.Models.Student

@{
    ViewBag.Title = "DeleteStudent";
}
<link href="~/Content/Index.css" type="text/css" rel="stylesheet" />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <center>
        
        <div class="search-student">
            <div class="review-heading ">
                <p class="text-light h6">Delete Student</p>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            
            @Html.TextBoxFor(m => m.StudentId, new { @required=true,@placeholder= "Enter the student Id",@class="StudentIdBox" })<br /><br />
           
            <input type="submit" class="student-submit" value="Delete" />
            
        </div>
    </center>
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/Scripts/jquery.validate.min.js")
@Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")