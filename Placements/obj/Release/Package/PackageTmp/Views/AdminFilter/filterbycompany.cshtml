@model Placements_Model.Models.Student

@{
    ViewBag.Title = "filterbycompany";
}



<link href="~/Content/Index.css" type="text/css" rel="stylesheet" />
<center><h2>Filter By Company</h2></center>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <center>
        <div class="container ">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="filter-student">


                <div class="filter-student-fields">
                    @Html.LabelFor(m => m.Company, "Filter the students placed in company", new { @class = "filter-text" }):      
                
               
                

                    @Html.TextBoxFor(m => m.Company, new { @required = true, @placeholder = "Company" })<br/>
                    @Html.ValidationMessageFor(model => model.Company, "", new { @class = "text-danger" })<br /><br />
                </div>
                <input type="submit" value="Filter Students" class="btn-outline-danger filter-button" />
            </div>
            

        </div>
    </center>
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/Scripts/jquery.validate.min.js")
@Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")